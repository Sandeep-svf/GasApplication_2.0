<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_layout_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.97"
        app:layout_constraintHeight_percent="0.95"
        android:background="@color/dark_blue"
        >



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="Title: "
            android:singleLine="true"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintVertical_bias="0.15"



            >

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/event_heading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="We all need push in out life. Guru is best for that."
            android:singleLine="true"
            app:layout_constraintWidth_percent="0.75"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintVertical_bias="0.15"



            >

        </androidx.appcompat.widget.AppCompatTextView>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="Message: "
            android:singleLine="true"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintVertical_bias="0.45"



            >

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/notificatin_subheading"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:text="We all need push in out life. Guru is best for thaall need push in out life. Guru is best for that."
            android:maxLines="2"
            android:minLines="1"
            app:layout_constraintWidth_percent="0.75"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintVertical_bias="0.55"



            >

        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="Date: "
            android:singleLine="true"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintVertical_bias="0.9"



            >

        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/notification_date"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="12 July 2022 , 12:14 PM "
            android:singleLine="true"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintVertical_bias="0.9"



            >

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatImageView

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/notification_delete_image"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="12 July 2022 , 12:14 PM "
            android:singleLine="true"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintVertical_bias="0.9"
            android:src="@drawable/ic_baseline_delete_24"



            >

        </androidx.appcompat.widget.AppCompatImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>