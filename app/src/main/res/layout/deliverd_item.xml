<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/dark_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want submit this item as delivered ?">

        </TextView>




    </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:visibility="gone"
        android:id="@+id/reason_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/custom_bg_border_line"
        android:layout_margin="10dp"
        android:gravity="top"
        android:padding="10dp"
        android:hint="Please enter reason for cancelation."
        android:textColor="@color/black"
        android:textSize="@dimen/heading_text_14sp"

        ></androidx.appcompat.widget.AppCompatEditText>
    <RelativeLayout
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/noDialogLogout"
            android:layout_alignParentLeft="true"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_continue_credentials">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No"

                android:textColor="@color/red"
                android:gravity="center">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/yesDialogLogout"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_continue_credentials">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Yes"
                android:textColor="@color/red"
                android:gravity="center">

            </TextView>
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>