<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".delivery.activity.OrderDetailsActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menubar_layoout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dark_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.075"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Order Detils"
            android:textSize="@dimen/heading_text_20sp"
            android:textStyle="bold"
            android:textColor="@color/white"

            ></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:src="@drawable/arrow_back"

            app:layout_constraintHorizontal_bias="0.05"
            ></androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_layout"
            android:layout_width="35dp"
            android:visibility="gone"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:src="@drawable/arrow_back"


            app:layout_constraintHorizontal_bias="0.05"

            ></androidx.appcompat.widget.AppCompatImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10"
            android:layout_marginTop="20dp"


            >


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="Order Number"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="4111FRC"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10"


            >


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="Name"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="4111FRC"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10"


            >


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="Phone Number"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/phone_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="4111FRC"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10"


            >


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="Order Status"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="4111FRC"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10"


            >


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="Order date"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="4111FRC"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10"


            >


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="Total Ammount"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/total_ammount"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="5"
                android:text="4111FRC"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="2"
                android:text="Address"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="8"
                android:maxLines="2"
                android:singleLine="true"
                android:text="4111FRC"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatTextView>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_item_list"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="20dp"
            android:background="@color/dark_ehite"

            ></androidx.recyclerview.widget.RecyclerView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/all_button_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:weightSum="9"
            android:orientation="horizontal"


            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/otw_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/custom_bg_otw"
                android:layout_margin="5dp"
                android:text="On the way"
                android:textColor="@color/white"
                android:textSize="@dimen/heading_text_14sp"

                ></androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/c_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/custom_bg_cancel"
                android:layout_margin="5dp"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/heading_text_14sp"
                ></androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/d_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/custom_bg_delivered"
                android:layout_margin="5dp"
                android:text="Delivered"
                android:textColor="@color/white"
                android:textSize="@dimen/heading_text_14sp"
                ></androidx.appcompat.widget.AppCompatButton>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>