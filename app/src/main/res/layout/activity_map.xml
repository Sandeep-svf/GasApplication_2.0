<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".utility.MapActivity">



        <RelativeLayout
            android:id="@+id/realtive"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/dark_blue"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relatice_back_change_password"
                android:layout_width="50dp"
                android:layout_height="55dp">

                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/arrow_back"
                    app:tint="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/your_position"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>

    <TextView
        android:id="@+id/search_address_layout"
        android:layout_width="match_parent"
        android:layout_height="36dp"

        android:layout_marginTop="5dp"
        android:background="@color/dark_ehite"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"

        ></TextView>

        <fragment
            android:id="@+id/maps"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

</androidx.appcompat.widget.LinearLayoutCompat>


