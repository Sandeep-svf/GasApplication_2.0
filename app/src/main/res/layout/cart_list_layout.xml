<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"

        android:elevation="8dp"


        app:layout_constraintWidth_percent="0.98"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cart_bg"

            >


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_image_cart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                app:shapeAppearanceOverlay="@style/roundedImageView2"

                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintVertical_bias="0.2"
                ></com.google.android.material.imageview.ShapeableImageView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHeight_percent="0.175"
                app:layout_constraintWidth_percent="0.375"
                android:elevation="8dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintHorizontal_bias="0.04"

                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/remove"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/minus"
                        android:background="@color/cart_bg_2"
                        app:tint="@color/black"
                        android:padding="10dp"

                        >


                    </androidx.appcompat.widget.AppCompatImageView>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/quantity_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1"
                        android:gravity="center"
                        android:textSize="@dimen/heading_text_18sp"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold"
                        >


                    </androidx.appcompat.widget.AppCompatTextView>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:background="@color/cart_bg_2"
                        android:src="@drawable/ic_baseline_add_24"
                        android:tint="@color/black"
                        >


                    </androidx.appcompat.widget.AppCompatImageView>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintHeight_percent="0.7"
                app:layout_constraintHorizontal_bias="0.85"
                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="10"


                        >


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="4"
                            android:text="Product ID"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/heading_text_14sp"

                            ></androidx.appcompat.widget.AppCompatTextView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/priduct_id_cart"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="6"
                            android:text="4111FRC"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/heading_text_14sp"

                            ></androidx.appcompat.widget.AppCompatTextView>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="10"


                        >


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="4"
                            android:text="Price"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/heading_text_14sp"

                            ></androidx.appcompat.widget.AppCompatTextView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/product_price_cart_ind"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="6"
                            android:text="120 INR"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/heading_text_14sp"

                            ></androidx.appcompat.widget.AppCompatTextView>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="10"


                        >


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="4"
                            android:text="@string/weight"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/heading_text_14sp"

                            ></androidx.appcompat.widget.AppCompatTextView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/product_weight_cart"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="6"
                            android:text="19 KG"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/heading_text_14sp"

                            ></androidx.appcompat.widget.AppCompatTextView>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="10"


                        >


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="4"
                            android:text="@string/total_ammount"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/heading_text_14sp"

                            ></androidx.appcompat.widget.AppCompatTextView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/product_price_cart"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="6"
                            android:text="415.75 INR"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/heading_text_14sp"

                            ></androidx.appcompat.widget.AppCompatTextView>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>



            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delete_cart_item_button"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:background="@color/cart_bg_2"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHeight_percent="0.175"
                app:layout_constraintWidth_percent="0.375"
                android:elevation="8dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintHorizontal_bias="0.8"
                android:text="Delete"
                android:gravity="center"
                android:textSize="@dimen/heading_text_14sp"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"

                >


            </androidx.appcompat.widget.AppCompatButton>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>